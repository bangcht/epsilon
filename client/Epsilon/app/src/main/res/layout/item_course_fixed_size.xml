<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="156dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    android:layout_height="272dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_imgv_course_thumbnail"
            android:layout_width="match_parent"
            android:src="@drawable/thamduong"
            android:scaleType="centerCrop"
            android:layout_height="92dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_tv_course_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:lines="3"
                android:ellipsize="end"
                android:text="Làm chủ Excel trong 4 giờ"
                />

            <TextView
                android:id="@+id/item_tv_teacher_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Lê Thẩm Dương"/>


            <RatingBar
                android:id="@+id/item_tv_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/customRatingBar"
                android:rating="3"
                android:clickable="false"
                android:isIndicator="true"
                android:stepSize="0.25"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">
                <TextView
                    android:id="@+id/item_tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="499,000đ"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"/>

                <ImageView
                    android:id="@+id/item_imgv_provider"
                    android:layout_width="60dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/icon_edumall"/>

            </RelativeLayout>



        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>